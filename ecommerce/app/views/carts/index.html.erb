<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= link_to 'Remove Item From Cart', remove_from_cart_item_path(item) %></td>
        <td><%= link_to 'Proceed for Payment', payment_cart_path(item.cart_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Back Item", items_path %>
